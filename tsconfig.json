{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    "types": ["node"],
    "esModuleInterop": true,

    "sourceMap": true,
    "declaration":true,

    "strict": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src", "src/server.ts"],
  "exclude": ["node_modules", "dist"]
}
